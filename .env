# ========================================
# F1 Racer AI Agent Environment Variables
# ========================================
# Copy this file to .env and fill in your actual values

# ========================================
# AZURE OPENAI CONFIGURATION (REQUIRED)
# ========================================
# Your Azure OpenAI service endpoint (e.g., https://your-resource.openai.azure.com/)
AZURE_OPENAI_ENDPOINT=https://your-openai-resource.openai.azure.com/

# Your Azure OpenAI API key
AZURE_OPENAI_API_KEY=your_azure_openai_api_key_here

# Azure OpenAI API version (typically 2024-02-15-preview for latest features)
AZURE_OPENAI_API_VERSION=2024-02-15-preview

# Your GPT-4o-mini deployment name in Azure OpenAI
AZURE_OPENAI_DEPLOYMENT_NAME=gpt-4o-mini

# ========================================
# APPLICATION CONFIGURATION
# ========================================
# Application environment (development, staging, production)
ENVIRONMENT=development

# Application title (optional)
APP_TITLE=F1 Racer AI Agent

# Application description (optional)
APP_DESCRIPTION=AI-powered Formula 1 racer social media agent

# Application version (optional)
APP_VERSION=1.0.0

# Enable debug mode (true/false)
DEBUG_MODE=false

# ========================================
# AUTHENTICATION CONFIGURATION
# ========================================
# Custom admin credentials (optional, overrides default demo credentials)
ADMIN_USERNAME=your_admin_username
ADMIN_PASSWORD=your_secure_admin_password

# Additional user accounts (optional, up to 5 users)
USER_1_USERNAME=driver1
USER_1_PASSWORD=secure_password_1
USER_1_ROLE=driver

USER_2_USERNAME=manager1
USER_2_PASSWORD=secure_password_2
USER_2_ROLE=manager

# Session timeout in minutes (default: 60)
SESSION_TIMEOUT_MINUTES=60

# Maximum login attempts before rate limiting (default: 5)
MAX_LOGIN_ATTEMPTS=5

# Rate limit window in minutes (default: 15)
LOGIN_RATE_LIMIT_MINUTES=15

# ========================================
# AGENT DEFAULT CONFIGURATION
# ========================================
# Default racer name
DEFAULT_RACER_NAME=Lightning McQueen

# Default team name
DEFAULT_TEAM_NAME=Rusteze Racing

# Default circuit
DEFAULT_CIRCUIT=Nurburgring

# Default race
DEFAULT_RACE=German Grand Prix

# ========================================
# LLM CONFIGURATION
# ========================================
# Temperature for text generation (0.0 to 2.0, default: 0.7)
LLM_TEMPERATURE=0.7

# Maximum tokens in response (50 to 4000, default: 500)
LLM_MAX_TOKENS=500

# Request timeout in seconds (5 to 300, default: 30)
LLM_TIMEOUT_SECONDS=30

# ========================================
# UI CONFIGURATION
# ========================================
# Sidebar width in pixels (default: 300)
SIDEBAR_WIDTH=300

# Maximum interaction history items to keep (default: 50)
MAX_INTERACTION_HISTORY=50

# ========================================
# DEPLOYMENT CONFIGURATION
# ========================================
# Deployment timestamp (automatically set by CI/CD)
DEPLOYMENT_TIMESTAMP=

# Git commit hash (automatically set by CI/CD)
COMMIT_HASH=

# Azure Web App name for staging
AZURE_WEBAPP_NAME_STAGING=f1-agent-staging

# Azure Web App name for production
AZURE_WEBAPP_NAME_PRODUCTION=f1-agent-production

# Staging URL
STAGING_URL=https://f1-agent-staging.azurewebsites.net

# Production URL
PRODUCTION_URL=https://f1-agent-production.azurewebsites.net

# ========================================
# MONITORING AND LOGGING
# ========================================
# Log level (DEBUG, INFO, WARNING, ERROR)
LOG_LEVEL=INFO

# Enable application insights (true/false)
ENABLE_APP_INSIGHTS=false

# Application Insights connection string (if enabled)
APPLICATIONINSIGHTS_CONNECTION_STRING=

# ========================================
# SECURITY CONFIGURATION
# ========================================
# Secret key for session management (generate a secure random string)
SECRET_KEY=your_secret_key_here_make_it_long_and_random

# CORS allowed origins (comma-separated)
CORS_ALLOWED_ORIGINS=http://localhost:3000,http://localhost:8501

# Rate limiting configuration
RATE_LIMIT_ENABLED=true
RATE_LIMIT_REQUESTS_PER_MINUTE=60

# ========================================
# AZURE SPECIFIC CONFIGURATION
# ========================================
# Azure subscription ID (for advanced monitoring)
AZURE_SUBSCRIPTION_ID=

# Azure resource group
AZURE_RESOURCE_GROUP=f1-agent-resources

# Azure region
AZURE_REGION=East US

# ========================================
# OPTIONAL INTEGRATIONS
# ========================================
# Redis connection string (for session storage in production)
REDIS_CONNECTION_STRING=

# Database connection string (for user management in production)
DATABASE_URL=

# SendGrid API key (for email notifications)
SENDGRID_API_KEY=

# Slack webhook URL (for deployment notifications)
SLACK_WEBHOOK_URL=

# ========================================
# DEVELOPMENT ONLY
# ========================================
# Enable development features
DEV_MODE=true

# Mock external services in development
MOCK_AZURE_OPENAI=false

# Enable detailed logging in development
VERBOSE_LOGGING=true

# Auto-reload on file changes
AUTO_RELOAD=true

# ========================================
# TESTING CONFIGURATION
# ========================================
# Test database URL
TEST_DATABASE_URL=

# Enable test mode
TEST_MODE=false

# Test user credentials
TEST_USERNAME=testuser
TEST_PASSWORD=testpass123

# ========================================
# NOTES FOR DEPLOYMENT
# ========================================
# 1. For local development:
#    - Copy this file to .env
#    - Fill in the Azure OpenAI credentials
#    - Set ENVIRONMENT=development
#
# 2. For Azure Web App deployment:
#    - Set these as Application Settings in Azure Portal
#    - Or use Azure CLI: az webapp config appsettings set
#
# 3. Security considerations:
#    - Never commit actual credentials to version control
#    - Use Azure Key Vault in production
#    - Rotate API keys regularly
#    - Use managed identities when possible
#
# 4. Scaling considerations:
#    - Use Redis for session storage in production
#    - Configure load balancing for multiple instances
#    - Monitor API rate limits and costs
